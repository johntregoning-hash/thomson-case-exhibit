---
interface Props {
  totalFindings: number;
  vindicationCount: number;
  delayMonths: number;
}

const { totalFindings, vindicationCount, delayMonths } = Astro.props;
const base = import.meta.env.BASE_URL;
const getHref = (path: string) => path === '/' ? (base || '/') : `${base}${path}`;
---

<section class="relative overflow-hidden py-24 lg:py-32">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-navy-950 via-navy-900 to-navy-950"></div>

  <!-- Decorative elements -->
  <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-gold-500/5 to-transparent"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-gold-500/10 rounded-full blur-3xl -translate-x-1/2 translate-y-1/2"></div>

  <div class="container-wide relative z-10">
    <div class="max-w-4xl">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-navy-800/50 border border-navy-700 mb-8">
        <span class="w-2 h-2 bg-gold-500 rounded-full animate-pulse-slow"></span>
        <span class="text-sm text-navy-200">Clinical Negligence Evidence Repository</span>
      </div>

      <!-- Main heading -->
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-serif font-bold text-white leading-tight mb-6">
        Thomson v<br class="hidden sm:block" />
        <span class="gradient-text">Multiple NHS Defendants</span>
      </h1>

      <!-- Subtitle -->
      <p class="text-lg sm:text-xl text-navy-200 leading-relaxed max-w-2xl mb-10">
        Comprehensive documentation of an <strong class="text-white">{delayMonths}-month diagnostic delay</strong>,
        covert psychiatric diagnosis, and systematic pattern of care failuresâ€”supported by
        <strong class="text-gold-400">{totalFindings}+ verified findings</strong> and objective medical evidence.
      </p>

      <!-- Key stats row -->
      <div class="flex flex-wrap gap-6 mb-10">
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 rounded-xl bg-gold-500/20 flex items-center justify-center">
            <svg class="w-6 h-6 text-gold-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-white">{totalFindings}+</p>
            <p class="text-sm text-navy-400">Documented Findings</p>
          </div>
        </div>

        <div class="flex items-center gap-3">
          <div class="w-12 h-12 rounded-xl bg-vindication-500/20 flex items-center justify-center">
            <svg class="w-6 h-6 text-vindication-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-vindication-400">{vindicationCount}+</p>
            <p class="text-sm text-navy-400">Vindication Evidence</p>
          </div>
        </div>

        <div class="flex items-center gap-3">
          <div class="w-12 h-12 rounded-xl bg-breach-500/20 flex items-center justify-center">
            <svg class="w-6 h-6 text-breach-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-breach-400">{delayMonths} months</p>
            <p class="text-sm text-navy-400">Diagnostic Delay</p>
          </div>
        </div>
      </div>

      <!-- CTA buttons -->
      <div class="flex flex-wrap gap-4">
        <a href={getHref('/findings')} class="btn-primary gap-2">
          Explore Findings
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href={getHref('/timeline')} class="btn-secondary gap-2">
          View Timeline
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
