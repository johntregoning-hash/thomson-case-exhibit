---
/**
 * Actors Page - V2 Design
 *
 * Key individuals in the case with:
 * - Interactive network visualization
 * - Classification-based card grouping
 * - Organisation relationship mapping
 * - Filter and search capabilities
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import ActorCard from '@components/actors/ActorCard.astro';
import ActorFilters from '@components/actors/ActorFilters.astro';
import ActorNetwork from '@components/actors/ActorNetwork';
import GlassCard from '@components/ui/GlassCard.astro';
import Badge from '@components/common/Badge.astro';

// Import actors data from JSON
import actorsData from '../data/actors.json';

const base = import.meta.env.BASE_URL;
const getHref = (path: string) => path === '/' ? (base || '/') : `${base}${path}`;

// Get all actors
const allActors = actorsData.actors || [];
const metadata = actorsData.metadata;
const organisationSummary = (actorsData as any).organisationSummary || {};

// Get unique classifications and organisations
const classifications = metadata.classifications || [];
const organisations = [...new Set(allActors.map((a: any) => a.organisation))];

// Calculate stats
const stats = {
  total: allActors.length,
  defendants: allActors.filter((a: any) => a.classification === 'DEFENDANT').length,
  favourable: allActors.filter((a: any) => a.classification === 'WITNESS_FAVOURABLE' || a.classification === 'CURRENT_CARE').length,
  critical: allActors.filter((a: any) => a.critical).length,
  organisations: organisations.length
};

// Group actors by classification
const defendants = allActors.filter((a: any) => a.classification === 'DEFENDANT');
const favourableWitnesses = allActors.filter((a: any) => a.classification === 'WITNESS_FAVOURABLE' || a.classification === 'CURRENT_CARE');
const adverseWitnesses = allActors.filter((a: any) => a.classification === 'WITNESS_ADVERSE');
const administrative = allActors.filter((a: any) => a.classification === 'ADMINISTRATIVE');

// Prepare simplified actor data for network component
const networkActors = allActors.map((a: any) => ({
  id: a.id,
  name: a.name,
  role: a.role,
  organisation: a.organisation,
  classification: a.classification,
  critical: a.critical,
  relatedFindings: a.relatedFindings
}));
---

<BaseLayout title="Actors" description="Key individuals in the Thomson clinical negligence case with relationship network">
  <!-- Hero Header -->
  <section class="relative py-12 lg:py-16 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-navy-800/30 to-transparent pointer-events-none"></div>
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-indigo-500/5 rounded-full blur-3xl pointer-events-none"></div>

    <div class="container-wide relative">
      <div class="max-w-4xl">
        <!-- Breadcrumb -->
        <nav class="flex items-center gap-2 text-sm mb-6">
          <a href={getHref('/')} class="text-navy-500 hover:text-white transition-colors">Home</a>
          <svg class="w-4 h-4 text-navy-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          <span class="text-gold-500">Key Actors</span>
        </nav>

        <h1 class="text-4xl lg:text-5xl font-display font-bold text-white mb-4">
          Case<br />
          <span class="text-gold-500">Actors</span>
        </h1>
        <p class="text-lg text-navy-300 leading-relaxed max-w-2xl">
          <strong class="text-white">{stats.total}</strong> individuals documented across
          <strong class="text-white">{stats.organisations}</strong> organisations.
          Each actor's documented conduct is verified by contemporaneous evidence and linked to relevant findings.
        </p>
      </div>
    </div>
  </section>

  <!-- Stats Dashboard -->
  <section class="py-6 border-y border-navy-700/50 bg-navy-800/20">
    <div class="container-wide">
      <div class="grid grid-cols-2 sm:grid-cols-4 lg:grid-cols-5 gap-4 lg:gap-6">
        <div class="text-center">
          <p class="text-3xl lg:text-4xl font-display font-bold text-white">{stats.total}</p>
          <p class="text-sm text-navy-500 uppercase tracking-wider mt-1">Total Actors</p>
        </div>
        <div class="text-center">
          <p class="text-3xl lg:text-4xl font-display font-bold text-red-400">{stats.defendants}</p>
          <p class="text-sm text-navy-500 uppercase tracking-wider mt-1">Defendants</p>
        </div>
        <div class="text-center">
          <p class="text-3xl lg:text-4xl font-display font-bold text-green-400">{stats.favourable}</p>
          <p class="text-sm text-navy-500 uppercase tracking-wider mt-1">Favourable</p>
        </div>
        <div class="text-center">
          <p class="text-3xl lg:text-4xl font-display font-bold text-gold-500">{stats.critical}</p>
          <p class="text-sm text-navy-500 uppercase tracking-wider mt-1">Critical</p>
        </div>
        <div class="text-center hidden lg:block">
          <p class="text-3xl lg:text-4xl font-display font-bold text-indigo-400">{stats.organisations}</p>
          <p class="text-sm text-navy-500 uppercase tracking-wider mt-1">Organisations</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Filter Bar -->
  <div class="container-wide">
    <ActorFilters
      classifications={classifications}
      organisations={organisations}
      totalActors={stats.total}
    />
  </div>

  <!-- Network Visualization (hidden by default, shown when view toggle clicked) -->
  <section id="actors-network" class="hidden py-8 lg:py-12">
    <div class="container-wide">
      <div class="mb-6">
        <h2 class="text-xl font-display font-semibold text-white mb-2">Relationship Network</h2>
        <p class="text-sm text-navy-400">
          Click actors to see connections. Gold nodes are shared findings linking multiple actors.
        </p>
      </div>
      <ActorNetwork
        client:load
        actors={networkActors}
        basePath={base}
      />
    </div>
  </section>

  <!-- Actors Grid -->
  <section id="actors-grid" class="py-8 lg:py-12">
    <div class="container-wide">
      <!-- Potential Defendants Section -->
      {defendants.length > 0 && (
        <div class="mb-12">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-4 h-4 rounded-full bg-red-500"></div>
            <h2 class="text-2xl font-display font-bold text-white">Potential Defendants</h2>
            <span class="text-sm text-navy-500">({defendants.length})</span>
          </div>
          <p class="text-navy-400 mb-6 max-w-2xl">
            Healthcare professionals and staff whose documented actions form part of the negligence allegations.
          </p>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            {defendants.map((actor: any, index: number) => (
              <div style={`animation-delay: ${index * 100}ms`}>
                <ActorCard actor={actor} />
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- Favourable Witnesses Section -->
      {favourableWitnesses.length > 0 && (
        <div class="mb-12">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-4 h-4 rounded-full bg-green-500"></div>
            <h2 class="text-2xl font-display font-bold text-white">Favourable Witnesses</h2>
            <span class="text-sm text-navy-500">({favourableWitnesses.length})</span>
          </div>
          <p class="text-navy-400 mb-6 max-w-2xl">
            Healthcare professionals who documented objective findings, refuted psychiatric mischaracterisation,
            or advocated for appropriate care.
          </p>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            {favourableWitnesses.map((actor: any, index: number) => (
              <div style={`animation-delay: ${index * 100}ms`}>
                <ActorCard actor={actor} />
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- Adverse Witnesses Section (if any) -->
      {adverseWitnesses.length > 0 && (
        <div class="mb-12">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-4 h-4 rounded-full bg-amber-500"></div>
            <h2 class="text-2xl font-display font-bold text-white">Adverse Witnesses</h2>
            <span class="text-sm text-navy-500">({adverseWitnesses.length})</span>
          </div>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            {adverseWitnesses.map((actor: any, index: number) => (
              <div style={`animation-delay: ${index * 100}ms`}>
                <ActorCard actor={actor} />
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- Administrative (if any and not defendants) -->
      {administrative.length > 0 && (
        <div class="mb-12">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-4 h-4 rounded-full bg-slate-500"></div>
            <h2 class="text-2xl font-display font-bold text-white">Administrative</h2>
            <span class="text-sm text-navy-500">({administrative.length})</span>
          </div>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            {administrative.map((actor: any, index: number) => (
              <div style={`animation-delay: ${index * 100}ms`}>
                <ActorCard actor={actor} />
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- Organisation Summary -->
  <section class="py-12 border-t border-navy-700/50 bg-navy-800/20">
    <div class="container-wide">
      <h2 class="text-2xl font-display font-bold text-white mb-8">Organisation Summary</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Former GP Practice -->
        {organisationSummary.groveParkTerraceSurgery && (
          <GlassCard variant="breach" padding="md">
            <div class="flex items-start justify-between mb-3">
              <svg class="w-8 h-8 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <Badge variant="breach">Primary</Badge>
            </div>
            <h3 class="font-display font-semibold text-white mb-1">Former GP Practice</h3>
            <p class="text-xs text-navy-400 mb-3">{organisationSummary.groveParkTerraceSurgery.name}</p>
            <div class="flex items-center gap-4 text-sm">
              <span class="text-red-400 font-semibold">{organisationSummary.groveParkTerraceSurgery.defendants?.length || 0} defendants</span>
            </div>
            {organisationSummary.groveParkTerraceSurgery.note && (
              <p class="text-xs text-gold-400 mt-3 italic">{organisationSummary.groveParkTerraceSurgery.note}</p>
            )}
          </GlassCard>
        )}

        <!-- Imperial College Healthcare -->
        {organisationSummary.imperialCollegeHealthcare && (
          <GlassCard padding="md">
            <div class="flex items-start justify-between mb-3">
              <svg class="w-8 h-8 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <Badge variant="default">Mixed</Badge>
            </div>
            <h3 class="font-display font-semibold text-white mb-1">Imperial College Healthcare</h3>
            <p class="text-xs text-navy-400 mb-3">{organisationSummary.imperialCollegeHealthcare.name}</p>
            <div class="flex items-center gap-4 text-sm">
              <span class="text-red-400">{organisationSummary.imperialCollegeHealthcare.potentialDefendants?.length || 0} defendants</span>
              <span class="text-green-400">{organisationSummary.imperialCollegeHealthcare.favourableWitnesses?.length || 0} favourable</span>
            </div>
          </GlassCard>
        )}

        <!-- Chelsea & Westminster -->
        {organisationSummary.chelseaWestminster && (
          <GlassCard variant="vindication" padding="md">
            <div class="flex items-start justify-between mb-3">
              <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <Badge variant="vindication">Supportive</Badge>
            </div>
            <h3 class="font-display font-semibold text-white mb-1">Chelsea & Westminster</h3>
            <p class="text-xs text-navy-400 mb-3">{organisationSummary.chelseaWestminster.name}</p>
            <div class="flex items-center gap-4 text-sm">
              <span class="text-green-400 font-semibold">{organisationSummary.chelseaWestminster.favourableWitnesses?.length || 0} favourable</span>
            </div>
          </GlassCard>
        )}

        <!-- Current Practice -->
        {organisationSummary.currentPractice && (
          <GlassCard variant="vindication" padding="md">
            <div class="flex items-start justify-between mb-3">
              <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
              <Badge variant="vindication">Current</Badge>
            </div>
            <h3 class="font-display font-semibold text-white mb-1">Current Practice</h3>
            <p class="text-xs text-navy-400 mb-3">{organisationSummary.currentPractice.name}</p>
            {organisationSummary.currentPractice.note && (
              <p class="text-xs text-gold-400 italic">{organisationSummary.currentPractice.note}</p>
            )}
          </GlassCard>
        )}
      </div>
    </div>
  </section>

  <!-- Classification Legend -->
  <section class="py-8 border-t border-navy-700/50">
    <div class="container-wide">
      <h3 class="text-lg font-display font-semibold text-white mb-6">Classification Key</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="flex items-center gap-3 p-3 rounded-lg bg-navy-800/30">
          <div class="w-4 h-4 rounded-full bg-red-500"></div>
          <div>
            <p class="text-sm font-medium text-white">Defendant</p>
            <p class="text-xs text-navy-400">Potential defendant in claim</p>
          </div>
        </div>
        <div class="flex items-center gap-3 p-3 rounded-lg bg-navy-800/30">
          <div class="w-4 h-4 rounded-full bg-green-500"></div>
          <div>
            <p class="text-sm font-medium text-white">Favourable Witness</p>
            <p class="text-xs text-navy-400">Evidence supports the claim</p>
          </div>
        </div>
        <div class="flex items-center gap-3 p-3 rounded-lg bg-navy-800/30">
          <div class="w-4 h-4 rounded-full bg-green-500"></div>
          <div>
            <p class="text-sm font-medium text-white">Current Care</p>
            <p class="text-xs text-navy-400">Currently treating provider</p>
          </div>
        </div>
        <div class="flex items-center gap-3 p-3 rounded-lg bg-navy-800/30">
          <div class="w-4 h-4 rounded-full bg-amber-500"></div>
          <div>
            <p class="text-sm font-medium text-white">Adverse Witness</p>
            <p class="text-xs text-navy-400">Evidence may oppose claim</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Verification Legend -->
  <section class="py-4 border-t border-navy-700/30">
    <div class="container-wide">
      <div class="flex flex-wrap items-center justify-center gap-6 text-xs">
        <div class="flex items-center gap-2">
          <span class="px-1.5 py-0.5 rounded bg-green-500/10 text-green-400">Documentary</span>
          <span class="text-navy-500">Verified by documents</span>
        </div>
        <div class="flex items-center gap-2">
          <span class="px-1.5 py-0.5 rounded bg-blue-500/10 text-blue-400">Testimony</span>
          <span class="text-navy-500">Witness statement</span>
        </div>
        <div class="flex items-center gap-2">
          <span class="px-1.5 py-0.5 rounded bg-red-500/10 text-red-400">Disproved</span>
          <span class="text-navy-500">Contradicted by evidence</span>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Staggered animation for cards */
  .actor-card {
    opacity: 0;
    animation: fade-up 0.5s ease-out forwards;
  }

  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
