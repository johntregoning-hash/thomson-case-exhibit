---
import BaseLayout from '@layouts/BaseLayout.astro';
import Badge from '@components/common/Badge.astro';
import essaysData from '../../data/essays.json';
import findingsData from '../../data/findings.json';

export function getStaticPaths() {
  const essays = essaysData.essays;
  return essays.map(essay => ({
    params: { id: essay.id },
    props: { essay }
  }));
}

const { essay } = Astro.props;

// Base URL helper for GitHub Pages
const base = import.meta.env.BASE_URL;
const getHref = (path: string) => path === '/' ? (base || '/') : `${base}${path}`;

type BadgeVariant = 'vindication' | 'breach' | 'discrepancy' | 'causation' | 'quantum' | 'procedural' | 'strategic' | 'witness' | 'fabrication' | 'default';

const categoryVariants: Record<string, BadgeVariant> = {
  'BREACH': 'breach',
  'CAUSATION': 'causation',
  'VINDICATION': 'vindication',
  'PROCEDURAL': 'procedural'
};

const variant: BadgeVariant = categoryVariants[essay.category] || 'default';

// Get related findings - properly typed
type FindingType = typeof findingsData.findings[0];
const relatedFindings: FindingType[] = (essay.keyFindings || [])
  .map((id: string) => findingsData.findings.find(f => f.id === id))
  .filter((f): f is FindingType => f !== undefined);

// Get other essays for navigation
const otherEssays = essaysData.essays.filter(e => e.id !== essay.id);
---

<BaseLayout title={essay.title} description={essay.summary}>
  <!-- Breadcrumb -->
  <nav class="py-4 border-b border-navy-800/50 bg-navy-950">
    <div class="container-wide">
      <div class="flex items-center gap-2 text-sm">
        <a href={getHref('/')} class="text-navy-400 hover:text-white transition-colors">Home</a>
        <span class="text-navy-600">/</span>
        <a href={getHref('/essays')} class="text-navy-400 hover:text-white transition-colors">Essays</a>
        <span class="text-navy-600">/</span>
        <span class="text-gold-500">{essay.id}</span>
      </div>
    </div>
  </nav>

  <!-- Header -->
  <section class="py-16 bg-navy-900/30">
    <div class="container-wide">
      <div class="max-w-4xl">
        <div class="flex flex-wrap items-center gap-4 mb-6">
          <Badge variant={variant} class="text-sm">{essay.category}</Badge>
          {essay.critical && (
            <span class="px-3 py-1 text-xs font-semibold rounded-full bg-breach-500/20 text-breach-400 border border-breach-500/30">
              CRITICAL
            </span>
          )}
          <span class="text-sm text-navy-500">Version {essay.version}</span>
        </div>
        
        <h1 class="text-3xl md:text-4xl font-serif font-bold text-white mb-4">
          {essay.title}
        </h1>
        <p class="text-xl text-gold-500/90 mb-6">{essay.subtitle}</p>

        <div class="flex flex-wrap items-center gap-6 text-sm">
          <div class="flex items-center gap-2">
            <span class="text-navy-500">Date:</span>
            <span class="text-white">{essay.date}</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-navy-500">Status:</span>
            <span class:list={[
              'px-2 py-1 rounded-full text-xs font-medium',
              essay.status === 'CURRENT' ? 'bg-vindication-500/20 text-vindication-400' : 'bg-navy-800 text-navy-400'
            ]}>
              {essay.status}
            </span>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-navy-500">Source:</span>
            <span class="text-navy-300 text-xs font-mono">{essay.filename}</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Column -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Summary -->
          <div class="card-base p-8">
            <h2 class="text-xl font-serif font-bold text-white mb-4">Executive Summary</h2>
            <p class="text-navy-200 leading-relaxed text-lg">
              {essay.summary}
            </p>
          </div>

          <!-- Key Arguments -->
          <div class="card-base p-8">
            <h2 class="text-xl font-serif font-bold text-white mb-6">Key Arguments</h2>
            <div class="space-y-4">
              {essay.keyArguments.map((arg: string, index: number) => (
                <div class="flex items-start gap-4 p-4 rounded-lg bg-navy-800/30">
                  <span class="flex-shrink-0 w-8 h-8 rounded-full bg-gold-500/20 text-gold-500 flex items-center justify-center text-sm font-bold">
                    {index + 1}
                  </span>
                  <p class="text-navy-200 leading-relaxed">{arg}</p>
                </div>
              ))}
            </div>
          </div>

          <!-- Related Findings Detail -->
          {relatedFindings.length > 0 && (
            <div class="card-base p-8">
              <h2 class="text-xl font-serif font-bold text-white mb-6">Supporting Evidence</h2>
              <div class="space-y-4">
                {relatedFindings.map((finding) => (
                  <a 
                    href={getHref(`/findings/${finding.id.toLowerCase()}`)}
                    class="block p-4 rounded-lg bg-navy-800/30 hover:bg-navy-800/50 transition-colors group"
                  >
                    <div class="flex items-start justify-between mb-2">
                      <span class="font-mono text-gold-500 group-hover:text-gold-400">{finding.id}</span>
                      <Badge variant={categoryVariants[finding.category] || 'default'} class="text-xs">{finding.category}</Badge>
                    </div>
                    <h3 class="font-semibold text-white mb-2 group-hover:text-gold-400 transition-colors">{finding.title}</h3>
                    <p class="text-sm text-navy-400 line-clamp-2">{finding.summary}</p>
                  </a>
                ))}
              </div>
            </div>
          )}
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <!-- Document Info -->
          <div class="card-base p-6">
            <h3 class="text-lg font-serif font-bold text-white mb-4">Document Info</h3>
            <dl class="space-y-4">
              <div>
                <dt class="text-xs uppercase tracking-wider text-navy-500 mb-1">Category</dt>
                <dd><Badge variant={variant}>{essay.category}</Badge></dd>
              </div>
              <div>
                <dt class="text-xs uppercase tracking-wider text-navy-500 mb-1">Version</dt>
                <dd class="text-white">{essay.version}</dd>
              </div>
              <div>
                <dt class="text-xs uppercase tracking-wider text-navy-500 mb-1">Last Updated</dt>
                <dd class="text-white">{essay.date}</dd>
              </div>
              <div>
                <dt class="text-xs uppercase tracking-wider text-navy-500 mb-1">Status</dt>
                <dd class:list={[
                  'inline-block px-2 py-1 rounded text-xs font-medium',
                  essay.status === 'CURRENT' ? 'bg-vindication-500/20 text-vindication-400' : 'bg-navy-800 text-navy-400'
                ]}>
                  {essay.status}
                </dd>
              </div>
            </dl>
          </div>

          <!-- Key Findings Quick Links -->
          <div class="card-base p-6">
            <h3 class="text-lg font-serif font-bold text-white mb-4">Key Findings</h3>
            <div class="flex flex-wrap gap-2">
              {essay.keyFindings.map((finding: string) => (
                <a 
                  href={getHref(`/findings/${finding.toLowerCase()}`)}
                  class="px-3 py-1.5 text-sm font-mono rounded bg-navy-800 text-gold-500 hover:bg-navy-700 hover:text-gold-400 transition-colors"
                >
                  {finding}
                </a>
              ))}
            </div>
          </div>

          <!-- Other Essays -->
          <div class="card-base p-6">
            <h3 class="text-lg font-serif font-bold text-white mb-4">Related Essays</h3>
            <ul class="space-y-3">
              {otherEssays.slice(0, 4).map((other) => (
                <li>
                  <a 
                    href={getHref(`/essays/${other.id}`)}
                    class="block p-3 rounded-lg bg-navy-800/50 hover:bg-navy-800 transition-colors group"
                  >
                    <Badge variant={categoryVariants[other.category] || 'default'} class="text-xs mb-2">{other.category}</Badge>
                    <p class="text-sm text-navy-300 group-hover:text-white transition-colors line-clamp-2">{other.title}</p>
                  </a>
                </li>
              ))}
            </ul>
            <a href={getHref('/essays')} class="block mt-4 text-sm text-gold-500 hover:text-gold-400 transition-colors text-center">
              View All Essays →
            </a>
          </div>

          <!-- Actions -->
          <div class="card-base p-6">
            <h3 class="text-lg font-serif font-bold text-white mb-4">Actions</h3>
            <div class="space-y-3">
              <a 
                href={getHref('/essays')} 
                class="flex items-center gap-2 text-navy-300 hover:text-white transition-colors"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back to All Essays
              </a>
              <a 
                href={getHref('/findings')} 
                class="flex items-center gap-2 text-navy-300 hover:text-white transition-colors"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Browse Findings
              </a>
              <a 
                href={getHref('/timeline')} 
                class="flex items-center gap-2 text-navy-300 hover:text-white transition-colors"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                View Timeline
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Navigation -->
  <section class="py-8 border-t border-navy-800/50">
    <div class="container-wide">
      <div class="flex justify-between items-center">
        <a 
          href={getHref('/essays')}
          class="px-6 py-3 rounded-lg bg-navy-800/50 text-navy-300 hover:bg-navy-800 hover:text-white transition-colors"
        >
          ← All Essays
        </a>
        <a 
          href={getHref('/findings')}
          class="px-6 py-3 rounded-lg bg-gold-600 text-navy-950 hover:bg-gold-500 transition-colors"
        >
          Browse Findings →
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
