---
/**
 * Individual Actor Profile Page - V3 Phase 5
 *
 * Generates "Conduct Reports" for each actor with:
 * - Classification-based theming
 * - Full conduct timeline with severity indicators
 * - Related findings with direct links
 * - Legal significance analysis
 * - Actor-specific evidence timeline
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import Badge from '@components/common/Badge.astro';
import GlassCard from '@components/ui/GlassCard.astro';

// Import data
import actorsData from '../../data/actors.json';
import findingsData from '../../data/findings.json';
import timelineData from '../../data/timeline.json';

export function getStaticPaths() {
  const actors = (actorsData as any).actors || [];
  return actors.map((actor: any) => ({
    params: { id: actor.id.toLowerCase() },
    props: { actor }
  }));
}

const { actor } = Astro.props as { actor: any };
const base = import.meta.env.BASE_URL;
const getHref = (path: string) => path === '/' ? (base || '/') : `${base}${path}`;

// Get related findings data
const allFindings = (findingsData as any).findings || [];
const relatedFindings = ((actor as any).relatedFindings || [])
  .map((fid: string) => allFindings.find((f: any) => f.id === fid))
  .filter(Boolean);

// Get timeline events related to this actor
const allEvents = (timelineData as any).events || [];
const actorName = (actor as any).name || '';
const actorOrg = (actor as any).organisation || '';
const actorEvents = allEvents.filter((e: any) => 
  e.source?.toLowerCase().includes(actorName.toLowerCase()) ||
  e.description?.toLowerCase().includes(actorName.toLowerCase()) ||
  (actorOrg && e.source?.toLowerCase().includes(actorOrg.toLowerCase().split('/')[0]?.trim()))
).slice(0, 10);

// Classification styling
const classificationStyles: Record<string, {
  bg: string;
  border: string;
  headerBg: string;
  icon: string;
  iconBg: string;
  label: string;
  badgeVariant: string;
  accentColor: string;
}> = {
  'DEFENDANT': {
    bg: 'bg-red-500/5',
    border: 'border-red-500/30',
    headerBg: 'from-red-900/40 to-navy-900/60',
    icon: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
    iconBg: 'bg-red-500/20 text-red-400',
    label: 'Potential Defendant',
    badgeVariant: 'breach',
    accentColor: 'red'
  },
  'WITNESS_FAVOURABLE': {
    bg: 'bg-green-500/5',
    border: 'border-green-500/30',
    headerBg: 'from-green-900/40 to-navy-900/60',
    icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
    iconBg: 'bg-green-500/20 text-green-400',
    label: 'Favourable Witness',
    badgeVariant: 'vindication',
    accentColor: 'green'
  },
  'CURRENT_CARE': {
    bg: 'bg-green-500/5',
    border: 'border-green-500/30',
    headerBg: 'from-green-900/40 to-navy-900/60',
    icon: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z',
    iconBg: 'bg-green-500/20 text-green-400',
    label: 'Current Care Provider',
    badgeVariant: 'vindication',
    accentColor: 'green'
  },
  'WITNESS_ADVERSE': {
    bg: 'bg-amber-500/5',
    border: 'border-amber-500/30',
    headerBg: 'from-amber-900/40 to-navy-900/60',
    icon: 'M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
    iconBg: 'bg-amber-500/20 text-amber-400',
    label: 'Adverse Witness',
    badgeVariant: 'warning',
    accentColor: 'amber'
  },
  'ADMINISTRATIVE': {
    bg: 'bg-slate-500/5',
    border: 'border-slate-500/30',
    headerBg: 'from-slate-800/40 to-navy-900/60',
    icon: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4',
    iconBg: 'bg-slate-500/20 text-slate-400',
    label: 'Administrative',
    badgeVariant: 'neutral',
    accentColor: 'slate'
  }
};

const style = classificationStyles[actor.classification] || classificationStyles['ADMINISTRATIVE'];

// Severity styling
const severityStyles: Record<string, { dot: string; bg: string; label: string }> = {
  'critical': { dot: 'bg-red-500', bg: 'bg-red-500/10 border-red-500/30', label: 'Critical' },
  'high': { dot: 'bg-orange-500', bg: 'bg-orange-500/10 border-orange-500/30', label: 'High' },
  'moderate': { dot: 'bg-amber-500', bg: 'bg-amber-500/10 border-amber-500/30', label: 'Moderate' },
  'low': { dot: 'bg-slate-500', bg: 'bg-slate-500/10 border-slate-500/30', label: 'Low' }
};

// Verification styling
const verificationStyles: Record<string, { icon: string; color: string; label: string }> = {
  'DOCUMENTARY': { icon: 'üìÑ', color: 'text-blue-400', label: 'Documentary Evidence' },
  'DOCUMENTARY_CONTRADICTED': { icon: '‚ö†Ô∏è', color: 'text-red-400', label: 'Contradicted by Evidence' },
  'NEGATIVE_DOCUMENTARY': { icon: '‚ùå', color: 'text-red-400', label: 'No Documentation Found' },
  'TESTIMONY': { icon: 'üí¨', color: 'text-amber-400', label: 'Testimony' },
  'DISPROVABLE': { icon: 'üîç', color: 'text-orange-400', label: 'Disprovable' }
};

// Status colors for findings
const getStatusBorder = (status: string) => {
  const colors: Record<string, string> = {
    'VINDICATION': 'border-green-500/30 hover:border-green-500/50',
    'BREACH': 'border-red-500/30 hover:border-red-500/50',
    'CRITICAL': 'border-gold-500/30 hover:border-gold-500/50',
    'DRAFT': 'border-navy-600 hover:border-navy-500'
  };
  return colors[status] || colors['DRAFT'];
};

const getStatusText = (status: string) => {
  const colors: Record<string, string> = {
    'VINDICATION': 'text-green-400',
    'BREACH': 'text-red-400',
    'CRITICAL': 'text-gold-400',
    'DRAFT': 'text-navy-400'
  };
  return colors[status] || colors['DRAFT'];
};
---

<BaseLayout 
  title={`${actor.name} - Conduct Report`} 
  description={`Conduct report for ${actor.name} - ${actor.role} at ${actor.organisation}`}
>
  <!-- Hero Header -->
  <section class={`relative py-12 lg:py-16 overflow-hidden bg-gradient-to-br ${style.headerBg}`}>
    <div class="absolute inset-0 bg-gradient-to-b from-navy-800/30 to-transparent pointer-events-none"></div>
    
    <div class="container-wide relative">
      <!-- Breadcrumb -->
      <nav class="flex items-center gap-2 text-sm mb-6">
        <a href={getHref('/')} class="text-navy-500 hover:text-white transition-colors">Home</a>
        <svg class="w-4 h-4 text-navy-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <a href={getHref('/actors')} class="text-navy-500 hover:text-white transition-colors">Actors</a>
        <svg class="w-4 h-4 text-navy-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-gold-500">{actor.id}</span>
      </nav>

      <div class="flex items-start gap-6">
        <!-- Actor Icon -->
        <div class={`flex-shrink-0 w-20 h-20 rounded-xl ${style.iconBg} flex items-center justify-center`}>
          <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={style.icon} />
          </svg>
        </div>

        <div class="flex-1">
          <div class="flex items-center gap-3 mb-2">
            <span class="text-sm font-mono text-navy-400">{actor.id}</span>
            <Badge variant={style.badgeVariant as any}>{style.label}</Badge>
            {actor.critical && (
              <Badge variant="breach">‚ö†Ô∏è Critical Actor</Badge>
            )}
          </div>
          
          <h1 class="text-3xl lg:text-4xl font-display font-bold text-white mb-2">
            {actor.name}
          </h1>
          
          <p class="text-lg text-navy-300 mb-1">{actor.role}</p>
          <p class="text-navy-400">{actor.organisation}</p>
          
          {actor.gmcNumber && (
            <p class="text-sm text-navy-500 mt-2">GMC: {actor.gmcNumber}</p>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Legal Significance Banner -->
  {actor.legalSignificance && (
    <section class={`border-y ${style.border} ${style.bg}`}>
      <div class="container-wide py-6">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-gold-500/10 flex items-center justify-center">
            <svg class="w-5 h-5 text-gold-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
            </svg>
          </div>
          <div>
            <h3 class="text-sm font-semibold text-gold-500 uppercase tracking-wider mb-1">Legal Significance</h3>
            <p class="text-white/90 leading-relaxed">{actor.legalSignificance}</p>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Main Content -->
  <div class="container-wide py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- Conduct Timeline (Main Column) -->
      <div class="lg:col-span-2 space-y-8">
        
        <!-- Conduct Report Section -->
        <div>
          <h2 class="text-2xl font-display font-bold text-white mb-6 flex items-center gap-3">
            <span class="w-8 h-8 rounded-lg bg-red-500/10 flex items-center justify-center">
              <svg class="w-4 h-4 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </span>
            Conduct Report
          </h2>

          {actor.conduct && actor.conduct.length > 0 ? (
            <div class="space-y-4">
              {actor.conduct.map((item: any, index: number) => {
                const severity = severityStyles[item.severity] || severityStyles['moderate'];
                const verification = verificationStyles[item.verification] || { icon: 'üìã', color: 'text-slate-400', label: 'Unverified' };
                
                return (
                  <div class={`relative pl-8 pb-6 ${index < actor.conduct.length - 1 ? 'border-l border-navy-700' : ''}`}>
                    <!-- Timeline dot -->
                    <div class={`absolute left-0 -translate-x-1/2 w-3 h-3 rounded-full ${severity.dot} ring-4 ring-navy-900`}></div>
                    
                    <div class={`glass-card p-5 border ${severity.bg}`}>
                      <div class="flex items-start justify-between gap-4 mb-3">
                        <div class="flex items-center gap-2">
                          <span class="text-sm font-mono text-navy-400">{item.date}</span>
                          <span class={`text-xs px-2 py-0.5 rounded-full ${severity.bg} border font-medium`}>
                            {severity.label}
                          </span>
                        </div>
                        <span class={`text-sm ${verification.color}`} title={verification.label}>
                          {verification.icon} {verification.label}
                        </span>
                      </div>
                      
                      <p class="text-white/90 leading-relaxed mb-3">{item.description}</p>
                      
                      {item.evidenceSource && (
                        <p class="text-sm text-navy-400">
                          <span class="text-navy-500">Source:</span> {item.evidenceSource}
                        </p>
                      )}
                    </div>
                  </div>
                );
              })}
            </div>
          ) : (
            <div class="glass-card p-8 text-center">
              <p class="text-navy-400">No specific conduct entries recorded for this actor.</p>
            </div>
          )}
        </div>

        <!-- Notes Section -->
        {actor.notes && (
          <div class="glass-card p-6">
            <h3 class="text-lg font-semibold text-white mb-3 flex items-center gap-2">
              <svg class="w-5 h-5 text-navy-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              Additional Notes
            </h3>
            <p class="text-navy-300 leading-relaxed">{actor.notes}</p>
          </div>
        )}
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        
        <!-- Related Findings -->
        <div class="glass-card p-6">
          <h3 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-gold-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
            </svg>
            Related Findings
            <span class="text-sm font-normal text-navy-400">({relatedFindings.length})</span>
          </h3>
          
          {relatedFindings.length > 0 ? (
            <div class="space-y-3">
              {relatedFindings.map((finding: any) => (
                  <a 
                    href={getHref(`/findings/${finding.id.toLowerCase()}`)}
                    class={`block p-3 rounded-lg border ${getStatusBorder(finding.status)} bg-navy-800/30 transition-all hover:bg-navy-800/50`}
                  >
                    <div class="flex items-start gap-3">
                      <span class="text-xs font-mono text-navy-400 flex-shrink-0">{finding.id}</span>
                      <div class="flex-1 min-w-0">
                        <p class="text-sm text-white/90 line-clamp-2">{finding.title || finding.summary?.slice(0, 60) + '...'}</p>
                        <div class="flex items-center gap-2 mt-1">
                          <span class={`text-xs ${getStatusText(finding.status)}`}>{finding.status}</span>
                        </div>
                      </div>
                    </div>
                  </a>
              ))}
            </div>
          ) : (
            <p class="text-sm text-navy-400">No findings directly linked to this actor.</p>
          )}
          
          <a 
            href={getHref('/findings')}
            class="mt-4 inline-flex items-center gap-2 text-sm text-gold-500 hover:text-gold-400 transition-colors"
          >
            View all findings
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

        <!-- Timeline Events -->
        {actorEvents.length > 0 && (
          <div class="glass-card p-6">
            <h3 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Timeline Mentions
              <span class="text-sm font-normal text-navy-400">({actorEvents.length})</span>
            </h3>
            
            <div class="space-y-3">
              {actorEvents.slice(0, 5).map((event: any) => (
                <div class="p-3 rounded-lg bg-navy-800/30 border border-navy-700/50">
                  <div class="flex items-center gap-2 mb-1">
                    <span class="text-xs font-mono text-navy-400">{event.date}</span>
                    {event.type && (
                      <span class={`text-xs px-1.5 py-0.5 rounded ${
                        event.type === 'BREACH' ? 'bg-red-500/20 text-red-400' :
                        event.type === 'VINDICATION' ? 'bg-green-500/20 text-green-400' :
                        'bg-navy-600/50 text-navy-300'
                      }`}>{event.type}</span>
                    )}
                  </div>
                  <p class="text-sm text-white/80 line-clamp-2">{event.description}</p>
                </div>
              ))}
            </div>
            
            <a 
              href={getHref('/timeline')}
              class="mt-4 inline-flex items-center gap-2 text-sm text-gold-500 hover:text-gold-400 transition-colors"
            >
              View full timeline
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        )}

        <!-- Quick Stats -->
        <div class="glass-card p-6">
          <h3 class="text-lg font-semibold text-white mb-4">Quick Stats</h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-navy-400">Conduct Entries</span>
              <span class="text-white font-mono">{actor.conduct?.length || 0}</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-navy-400">Related Findings</span>
              <span class="text-white font-mono">{relatedFindings.length}</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-navy-400">Timeline Mentions</span>
              <span class="text-white font-mono">{actorEvents.length}</span>
            </div>
            {actor.conduct?.filter((c: any) => c.severity === 'critical').length > 0 && (
              <div class="flex items-center justify-between pt-2 border-t border-navy-700">
                <span class="text-red-400">Critical Issues</span>
                <span class="text-red-400 font-mono font-bold">
                  {actor.conduct.filter((c: any) => c.severity === 'critical').length}
                </span>
              </div>
            )}
          </div>
        </div>

        <!-- Back to Actors -->
        <a 
          href={getHref('/actors')}
          class="block text-center py-3 px-4 rounded-lg border border-navy-700 hover:border-gold-500/50 bg-navy-800/30 hover:bg-navy-800/50 text-navy-300 hover:text-white transition-all"
        >
          ‚Üê Back to All Actors
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
